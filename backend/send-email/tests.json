{
  "tests": [
    {
      "name": "Valid contact form submission",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67",
        "email": "test@example.com",
        "message": "Хочу заказать кухню"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Contact form without optional email",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Петр Петров",
        "phone": "89251234567",
        "message": "Заказ шкафа-купе"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid phone number",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Test User",
        "phone": "123",
        "message": "Test"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "Test message"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": ""
    }
  ]
}
